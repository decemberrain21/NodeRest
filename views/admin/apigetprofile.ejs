		<br>
		<button id="btnsubmit">Submit</button>
		</div>
		<div id="resultdata">	
			
		</div>
	</body>
	<script src="/assets/js/jquery.min.js"></script>
	<script>
	jQuery(function($){
		$("#btnsubmit").click(function() {
			
				var data ={ 
					login_token:$('#login_token').val()
				}
				$.ajax({
					  url: "/api/getUserProfile",
